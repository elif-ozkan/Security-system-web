@model IEnumerable<WebApplication1.Models.SecurityProductAssigments>

@{
    ViewBag.Title = "Security Product Assignments";
}

<h2>Security Product Assignments</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>AssigmentID</th>
            <th>Security Product ID</th>
            <th>User ID</th>
            <th>Asigment Date</th>
            <th>Return Date</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.AssignmentId</td>
                <td>@assignment.SecurityProduct?.Name ?? "—"</td>
                <td>@assignment.User?.Name ?? "—"</td>
                <td>@assignment.AssignmentDate.ToString("yyyy-MM-dd")</td>
                <td>@(assignment.ReturnDate?.ToString("yyyy-MM-dd") ?? "—")</td>
            </tr>
        }
    </tbody>
</table>
