@model IEnumerable<WebApplication1.Models.ComputerProductAssigments>

@{
    ViewBag.Title = "Computer Product Assignments";
}

<h2>Computer Product Assignments</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Assignment ID</th>
            <th>Computer Product</th>
            <th>User</th>
            <th>Assignment Date</th>
            <th>Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.AssignmentId</td>
                <td>@assignment.ComputerProduct?.Name ?? "—"</td>
                <td>@assignment.User?.Name ?? "—"</td>
                <td>@assignment.AssignmentDate.ToString("yyyy-MM-dd")</td>
                <td>@(assignment.ReturnDate?.ToString("yyyy-MM-dd") ?? "—")</td>
            </tr>
        }
    </tbody>
</table>

